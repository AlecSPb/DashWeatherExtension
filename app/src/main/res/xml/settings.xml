<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory android:title="@string/preference_cat_general">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_key_use_imperial"
            android:summaryOff="@string/preference_imperial_off"
            android:summaryOn="@string/preference_imperial_on"
            android:title="@string/preference_use_imperial" />

        <android.support.v7.preference.ListPreference
            android:entries="@array/preference_update_frequency_values"
            android:entryValues="@array/pref_key_update_frequency_values"
            android:key="@string/pref_key_update_frequency"
            android:title="@string/preference_update_frequency" />

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory android:title="@string/preference_cat_appearance">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_key_show_location"
            android:title="@string/preference_show_high_low" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_key_show_high_low"
            android:title="@string/preference_show_high_low" />


        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_key_invert_high_low"
            android:title="@string/preference_high_low_invert" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_key_show_humidity"
            android:title="@string/preference_show_humidity" />


        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_key_show_uv"
            android:title="@string/preference_show_uv" />


    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory android:title="@string/preference_cat_permissions">

        <android.support.v7.preference.Preference
            android:key="@string/pref_key_permission"
            android:title="@string/preference_permission" />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>